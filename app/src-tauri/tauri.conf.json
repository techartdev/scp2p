{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/nicegui/static/tauri/schemas/tauri-conf-v2.json",
  "productName": "SCP2P",
  "version": "0.1.0",
  "identifier": "com.scp2p.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "watchIgnore": ["content_blobs", "*.db", "*.db-shm", "*.db-wal"]
  },
  "app": {
    "windows": [
      {
        "title": "SCP2P",
        "width": 1280,
        "height": 820,
        "minWidth": 960,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": []
  }
}
